<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            stylesheets="/styles/style.css"
            minHeight="500.0" minWidth="800.0">

    <top>
        <HBox maxWidth="500"
              minWidth="400"
              maxHeight="75"
              fx:id = "stats"
              styleClass="default-padding"
              BorderPane.alignment="BOTTOM_CENTER">

            <BorderPane.margin>
                <Insets bottom="0.0" left="5.0" right="5.0" top="50.0" />
            </BorderPane.margin>

            <Label styleClass="default-padding, title-font"
                   fx:id="balls">
                Balls in play: 0
            </Label>

            <Region prefHeight="75.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
            <Label StackPane.alignment="TOP_RIGHT"
                   styleClass="default-padding, title-font"
                   fx:id="score"
                   alignment="CENTER_RIGHT">
                Score: 0
            </Label>

        </HBox>

    </top>

    <center>
        <StackPane maxHeight="500"
                   maxWidth="500"
                   fx:id="stackPane">

            <ToolBar maxWidth="225"
                     minWidth="200"
                     minHeight="200"
                     maxHeight="250"
                     fx:id="pauseMenu"
                     styleClass="no-padding">

                <GridPane hgap="16"
                          vgap="15"
                          alignment="CENTER"
                          fx:id="pauseMenuItemHolder"
                          styleClass="no-padding">

                    <Button text="%PAUSE_MENU_BACK"
                            GridPane.columnIndex="0"
                            GridPane.rowIndex="0"
                            fx:id="menuBackButton"
                            styleClass="back-button, pause-menu-item-padding, pause-menu-font"/>

                    <Button text="%PAUSE_MENU_SAVE"
                            GridPane.columnIndex="0"
                            GridPane.rowIndex="1"
                            fx:id="menuSaveButton"
                            styleClass="save-progress-button, pause-menu-item-padding, pause-menu-font"/>

                    <Button text="%PAUSE_MENU_LOAD"
                            GridPane.columnIndex="0"
                            GridPane.rowIndex="2"
                            fx:id="menuLoadButton"
                            styleClass="load-game-button, pause-menu-item-padding, pause-menu-font"/>

                    <Button text="%PAUSE_MENU_EDITOR"
                            GridPane.columnIndex="0"
                            GridPane.rowIndex="3"
                            fx:id="menuEditorButton"
                            styleClass="to-editor-button, pause-menu-item-padding, pause-menu-font"/>

                    <Button text="%PAUSE_MENU_EXIT"
                            GridPane.columnIndex="0"
                            GridPane.rowIndex="4"
                            fx:id="menuExitButton"
                            styleClass="exit-game-button, pause-menu-item-padding, pause-menu-font"/>

                </GridPane>
            </ToolBar>

            <Canvas width="500"
                    height="500"
                    fx:id="canvas"/>

        </StackPane>
    </center>

    <bottom>
        <ToolBar maxWidth="200"
                 styleClass="game-bar"
                 BorderPane.alignment="TOP_CENTER">

            <BorderPane.margin>
                <Insets bottom="100.0" left="25.0" right="25.0" top="0.0" />
            </BorderPane.margin>

            <GridPane vgap="4"
                      hgap="16"
                      fx:id="gameMenu"
                      styleClass="default-padding">



                <Button GridPane.rowIndex="0"
                        GridPane.columnIndex="0"
                        minWidth="24"
                        minHeight="24"
                        maxWidth="24"
                        maxHeight="24"
                        fx:id="playButton"
                        styleClass="play-button">
                    <tooltip>
                        <Tooltip text="%INGAME_MENU_PLAY"/>
                    </tooltip>
                </Button>

                <Button GridPane.rowIndex="0"
                        GridPane.columnIndex="1"
                        minWidth="24"
                        minHeight="24"
                        maxWidth="24"
                        maxHeight="24"
                        fx:id="tickButton"
                        styleClass="tick-button">
                    <tooltip>
                        <Tooltip text="%INGAME_MENU_TICK"/>
                    </tooltip>
                </Button>

                <Button GridPane.rowIndex="0"
                        GridPane.columnIndex="2"
                        minWidth="24"
                        minHeight="24"
                        maxWidth="24"
                        maxHeight="24"
                        fx:id="menuButton"
                        styleClass="pause-screen-button">
                    <tooltip>
                        <Tooltip text="%INGAME_MENU_MENU"/>
                    </tooltip>
                </Button>

                <Button GridPane.rowIndex="0"
                        GridPane.columnIndex="3"
                        minWidth="24"
                        minHeight="24"
                        maxWidth="24"
                        maxHeight="24"
                        fx:id="soundButton"
                        styleClass="sound-off-button">
                    <tooltip>
                        <Tooltip text="%INGAME_MENU_MUSIC"/>
                    </tooltip>
                </Button>

            </GridPane>
        </ToolBar>

    </bottom>
</BorderPane>
